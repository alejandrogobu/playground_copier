name: "{{ project_name }}"
version: "1.0.0"
config-version: 2

profile: 'default'

model-paths: ["models"]
analysis-paths: ["analyses"]
test-paths: ["tests"]
seed-paths: ["seeds"]
macro-paths: ["macros"]
snapshot-paths: ["snapshots"]

target-path: "target"
clean-targets:
  - "target"
  - "dbt_packages"

models:
  +transient: false
  +persist_docs:
    relation: true
    columns: true
  {{ project_name }}:
    marts:
    +database: "workshop_{% raw %}{{ env_var('DBT_ENVIRONMENT') }}{% endraw %}_gold"
    staging:
      +database: "workshop_{% raw %}{{ env_var('DBT_ENVIRONMENT') }}{% endraw %}_silver"

  dbt_project_evaluator:
    +database: "workshop_{% raw %}{{ env_var('DBT_ENVIRONMENT') }}{% endraw %}_silver"
    +schema: dbt_project_evaluator
    +static_analysis: unsafe
  
seeds:
  dbt_project_evaluator:
    +database: "workshop_{% raw %}{{ env_var('DBT_ENVIRONMENT') }}{% endraw %}_silver"
    +schema: dbt_project_evaluator